<Window x:Class="GerenciadorDeEstoque.MainWindow"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     Title="Gerenciador de Estoque" Height="212" Width="329"
     WindowStyle="SingleBorderWindow" WindowStartupLocation="CenterScreen">
    <StackPanel Background="#FFE5E5E5">
        <TextBlock FontSize="24" FontWeight="Bold"
                Text="Gerenciador de Estoque" Height="46" Width="270" />
        <StackPanel Orientation="Horizontal">
            <Button Content="Adicionar Produtos" Click="AdicionarProduto_Click"
                 Background="#FFB5D0F0" BorderThickness="1" BorderBrush="Black" Foreground="White" 
                    FontSize="18" Padding="20" FontWeight="Bold"/>
            <Button Content="Buscar" Click="BuscarProduto_Click" 
                 Background="#FFB5D0F0" BorderThickness="1" BorderBrush="Black" Foreground="White"
                    FontSize="18" Padding="20" Width="137" FontWeight="Bold"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Content="Listar" Click="ListarProdutos_Click"
                Background="#FFB5D0F0" BorderThickness="1" BorderBrush="Black" Foreground="White"
                    FontSize="18" Padding="20" Width="329" FontWeight="Bold"/>
        </StackPanel>
    </StackPanel>
</Window>