<Window x:Class="GerenciadorDeEstoque.MainWindow"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     Title="Gerenciador de Estoque" Height="188" Width="330"
     WindowStyle="SingleBorderWindow" WindowStartupLocation="CenterScreen">
    <StackPanel Background="#FFE5E5E5">
        <TextBlock FontSize="24" FontWeight="Bold"
                Text="Gerenciador de Estoque" Height="46" Width="270" />
        <StackPanel Orientation="Horizontal">
            <Button Content="Adicionar" Click="AdicionarProduto_Click"
                 Background="#FFB5D0F0" BorderThickness="0" Foreground="White" FontSize="18" Padding="20"/>
            <Button Content="Listar" Click="ListarProdutos_Click"
                Background="#FFB5D0F0" BorderThickness="0" Foreground="White" FontSize="18" Padding="20" Width="96"/>
            <Button Content="Buscar" Click="BuscarProduto_Click" 
                 Background="#FFB5D0F0" BorderThickness="0" Foreground="White" FontSize="18" Padding="20" Width="120"/>
        </StackPanel>
    </StackPanel>
</Window>